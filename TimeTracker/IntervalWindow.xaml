<Window x:Class="TimeTracker.IntervalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IntervalWindow" Height="134" Width="415" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Button x:Name="buttonOK"  Content="OK" Grid.Column="1" HorizontalAlignment="Stretch" Margin="3" Grid.Row="2" VerticalAlignment="Stretch" Width="Auto" Click="buttonOK_Click"/>
        <Label Content="Start date:" HorizontalAlignment="Stretch" Margin="3" VerticalAlignment="Stretch"/>
        <Label Content="End date:" HorizontalAlignment="Stretch" Margin="3" VerticalAlignment="Stretch" Grid.Column="1"/>
        <DatePicker x:Name="datePickerEnd" Grid.Column="1" HorizontalAlignment="Stretch" Margin="3" Grid.Row="1" VerticalAlignment="Stretch"/>
        <DatePicker x:Name="datePickerStart" HorizontalAlignment="Stretch" Margin="3" Grid.Row="1" VerticalAlignment="Stretch"/>
    </Grid>
</Window>
